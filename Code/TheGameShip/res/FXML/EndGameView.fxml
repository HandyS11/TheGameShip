<Pane id="background" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EndGameView">
    <children>
        <HBox alignment="CENTER" prefWidth="1280">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints prefWidth="300.0" />
                        <ColumnConstraints prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="10" />
                        <RowConstraints percentHeight="40" />
                        <RowConstraints percentHeight="10" />
                        <RowConstraints percentHeight="30" />
                        <RowConstraints percentHeight="10" />
                    </rowConstraints>
                    <children>
                        <ImageView fitHeight="300.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <image>
                                <Image url="@/Sprites/logo.png" />
                            </image>
                        </ImageView>
                        <Button id="button" onAction="#GoToMenu" text="Go to Menu" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                        <Button id="button" onAction="#RageQuit" text="(Rage)Quit" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                  <Label id="label" text="SCORE:" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                  <Label id="label" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
            </children>
        </HBox>
    </children>
</Pane>
